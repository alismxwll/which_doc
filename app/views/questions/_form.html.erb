<%= render 'layouts/error', :object => @question %>

<%= form_for(@question) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
